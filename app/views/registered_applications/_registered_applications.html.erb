<% if user_signed_in?%>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Application Name</th>
      <th>URL</th>
      <th colspan="3"></th>
    </tr>
  </thead>

 <tbody>
      <% unless current_user.registered_applications.empty? %>
      <%= render current_user.registered_applications %>
  <% else %>
  <tr><td colspan=3>You have no registered applications.  <%= link_to 'Add one now.', new_user_registered_application_path(current_user) %></td></tr>
  <% end %>
  </tbody>
</table>

 <%= link_to 'Add Application', new_user_registered_application_path(current_user) %>
 
<% end %>
