<!DOCTYPE html>
<html>
<head>
  <title>EventrixDuce</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

 <div class="container">
  <nav class="navbar-header">
    <h1 id="title", style="font-family: Agency FB;"><strong>EventrixDuce</strong></h1>
  </nav>
    <div class="pull-right user-info">
      <% if user_signed_in? %>
        <div class="navbar-text navbar-right">
          <p style="color: #8600b3;"><strong><%= current_user.name %></strong></p>
          <%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %> -
          <%= link_to "Sign Out", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>
          - <%= link_to 'Track New App', new_user_registered_application_path(current_user), :class => 'navbar-link'%>
        </div>
      <% else %>
         <%= link_to "Sign Up", new_user_registration_path, :class => 'navbar-link'  %> -
         <%= link_to "Sign In", new_user_session_path, :class => 'navbar-link'  %>
      <% end %>
    </div>

    <div class="flash">
      <% if flash[:notice] %>
        <div class="alert alert-success">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <%= flash[:notice] %>
        </div>
      <% elsif flash.now[:alert] %>
        <div class="alert alert-danger">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <%= flash[:alert] %>
        </div>
      <% elsif flash.now[:alert] %>
        <div class="alert alert-warning">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <%= flash[:alert] %>
        </div>
      <% end %>
    </div>  
    <div class="content-container">
     <%= yield %>
    </div>
   </div>
</body>
</html>
